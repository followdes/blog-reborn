  <%= form_for @user do |f| %>
         <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username, class:"form-control", placeholder: "Username" %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email,class:"form-control", rows:10, placeholder:"Email" %>
          
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password,class:"form-control", rows:10, placeholder:"Password" %>
          
        </div>
        <%= f.submit(@user.new_record? ? "Sign up" : "Update", :class => "btn btn-lg btn-success pull-right" )%>
  <% end %>